{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "types": [
          "reflect-metadata",
      ],
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false,
      "strict": true
  },
  "compileOnSave": true,
  "include": [
      "src/**/*",
      "test/**/*"
  ]
}